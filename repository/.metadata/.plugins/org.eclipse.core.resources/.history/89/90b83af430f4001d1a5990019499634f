package in.main.dto;

import java.io.Serializable;


// THIS CLASS OBJECT WILL BE TRANSFERRED FROM ONE LAYER TO ANOTHER .
//  IT ACTS AS DTO
// OBJECT OF THIS CLASS RESEAMBLE JUST LIKE STUDENT RECORD IN DATABASE..
public class Student implements Serializable {
	private static final long serialVersionUID = 1L;
	public int id;
	public String name;
	public int age;
	
	public static Student student = null
	
	if(student==null)
	{
		System.out.println("student object is empty");
	}
	else {
		student=new Student();
	}
	
	
	static {
		System.out.println("Student.static_method()");
	}
	
	private Student()
	{
		System.out.println("Student.Student()");
	}
	
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	@Override
	public String toString() {
		return "Student [id=" + id + ", name=" + name + ", age=" + age + "]";
	}
	
}
